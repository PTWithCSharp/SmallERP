@model IEnumerable<DatabaseAccess.tblSupplier>

@{
    ViewBag.Title = "Branch Supplier";
}


<script src="~/Scripts/jquery-3.7.0.js"></script>


<div class="card">
    <div class="card card-default">
        <div class="card-header">
            @*@Html.ActionLink("Add User", "Create", null, new { @style = "float:left", @class = "btn btn-primary" })*@
            <input type="text" id="searchuser" name="searchuser" class="form-control col-md-3" style="float:right;" placeholder="search here" />

        </div>
        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                Supplier Name
                            </th>
                            <th>
                                Contact No
                            </th>
                            <th>
                                Address
                            </th>
                            <th>
                                Email
                            </th>

                            <th>
                                Branch
                            </th>
                            <th>
                                Added By
                            </th>
                          
                            <th></th>
                        </tr>
                    </thead>

                    <tbody id="listusers">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SupplierName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SupplierConatctNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SupplierAddress)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SupplierEmail)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.tblBranch.BranchName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblUser.UserName)
                                </td>
                            
                                <td>
                                    @Html.ActionLink("Update", "Edit", new { id = item.SupplierID }, new { @class = "btn  btn-inverse btn-primary fa fa-edit" })
                                    @Html.ActionLink("View", "Details", new { id = item.SupplierID }, new { @class = "btn  btn-primary fa fa-exclamation" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.SupplierID }, new { @class = "btn  btn-primary fa fa-exclamation" })
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#searchuser").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#listusers tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });

</script>


