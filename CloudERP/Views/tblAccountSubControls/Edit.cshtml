@model DatabaseAccess.tblAccountSubControl

@{
    ViewBag.Title = "Update Account SubControl";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
      
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AccountSubControlID)
        @Html.HiddenFor(model => model.CompanyID)
        @Html.HiddenFor(model => model.BranchID)
  

        <div class="form-group">
            @Html.LabelFor(model => model.AccountControlID, "Select Account Control", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("AccountControlID", null,"Account Control ", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AccountControlID, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.AccountSubControlName,"Account SubControl Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AccountSubControlName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AccountSubControlName, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
