@model IEnumerable<DatabaseAccess.tblUser>

@{
    ViewBag.Title = "List of All User";
}

<script src="~/Scripts/jquery-3.7.0.js"></script>


<div class="card">
    <div class="card card-default">
        <div class="card-header">
            @*@Html.ActionLink("Add User", "Create", null, new { @style = "float:left", @class = "btn btn-primary" })*@
            <input type="text" id="searchuser" name="searchuser" class="form-control col-md-3" style="float:right;" placeholder="search here" />

        </div>
        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FullName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ContactNo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Password)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsActive)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.tblUserType.UserType)
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody id="listusers">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContactNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Password)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsActive)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblUserType.UserType)
                                </td>
                                <td>
                                    @{
                                        if (Convert.ToInt32(Session["BranchTypeID"]) == 1)
                                        {

                                                 @Html.ActionLink("Update", "Edit", new { id = item.UserID }, new { @class = "btn  btn-inverse btn-primary fa fa-edit" })
                                        }
                                    }
                                    @Html.ActionLink("View", "Details", new { id = item.UserID }, new { @class = "btn  btn-primary fa fa-exclamation" })
                                    @*@Html.ActionLink("Delete", "Delete", new { id = item.UserID }, new { @class = "btn  btn-primary fa fa-exclamation" })*@
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#searchuser").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#listusers tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });

</script>
