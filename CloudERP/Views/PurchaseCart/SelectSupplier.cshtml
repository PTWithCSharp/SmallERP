@model IEnumerable<DatabaseAccess.tblSupplier>

@{
    ViewBag.Title = "Select Supplier";
}

<script src="~/Scripts/jquery-3.7.0.js"></script>

@using (Html.BeginForm("PurchaseConfirm", "PurchaseCart", FormMethod.Post, null))
{


    <div class="card">
        <div class="card card-default">
            <div class="card-header">
                <h3 class="text-danger">@ViewBag.Message</h3>
                <input type="text" id="searchbranch" name="searchbranch" class="form-control col-md-3" style="float:right;" placeholder="search here" />

            </div>
            <div class="card-body">

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th style="display:none;">
                                    SupplierID
                                </th>
                                <th>
                                    Supplier
                                </th>
                                <th>
                                    Contact No
                                </th>

                                <th>
                                    Email
                                </th>

                                <th></th>
                            </tr>
                        </thead>

                        <tbody id="listbranches">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="display:none; ">
                                        @Html.EditorFor(modelItem => item.SupplierID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SupplierName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SupplierConatctNo)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.SupplierEmail)
                                    </td>
                                    <td>
                                        <input type="radio" name="name @item.SupplierID" class="chb" />
                                    </td>

                                    @*<td>

                                            @Html.ActionLink("Select", "PurchaseConfirm", new { id = item.SupplierID }, new { @class = "btn  btn-primary fa fa-exclamation" })
                                        </td>*@
                                </tr>

                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>


    @Html.AntiForgeryToken()
    <h3 class="text-danger">@ViewBag.Message</h3>

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Purchase Description</label>

            <div class="col-md-10">
                <input class="form-control" type="text" id="item.Description" name="item.Description" placeholder="Enter Purchase Description" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Is Purchase Payment?</label>

            <div class="col-md-10">
                <div style="float:left"><input class="form-control" type="checkbox" name="IsPayment" /></div>
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Confirm Purchase" class="btn  btn-primary fa" />
            </div>
        </div>
    </div>
}




<script type="text/javascript">
    $(document).ready(function () {
        $("#searchbranch").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#listbranches tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
        $(".chb").change(function (event) {
            $(".chb").prop('checked', false);
            $(this).prop('checked', true);
        });

    });

</script>


