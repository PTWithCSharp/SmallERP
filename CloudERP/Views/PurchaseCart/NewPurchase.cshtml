@model IEnumerable<DatabaseAccess.tblPurchaseCartDetail>

@{
    ViewBag.Title = "New Purchase";
}
<script src="~/Scripts/jquery-3.7.0.js"></script>

@using (Html.BeginForm("AddItem", "PurchaseCart", FormMethod.Post, null))
{
    @Html.AntiForgeryToken()
    <h3 class="text-danger">@ViewBag.Message</h3>

    <div class="form-horizontal">
      
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Select Product</label>

            <div class="col-md-10">
                <select class="form-control" id="PID" name="PID" required></select>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Quantity</label>

            <div class="col-md-10">
                <input class="form-control" type="number" id="Qty" name="Qty" placeholder="Enter Purchase Quantity..." required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Price</label>

            <div class="col-md-10">
                <input class="form-control" type="number"  id="price" name="price" placeholder="Enter Purchase Price..." required />
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}


<div class="card">
    <div class="card card-default">
        <div class="card-header">

            <input type="text" id="searchuser" name="searchuser" class="form-control col-md-3" style="float:right;" placeholder="search here" />

        </div>
        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                Product Name
                            </th>
                            <th>
                                Purchase Quantity
                            </th>
                            <th>
                                Purchase Price
                            </th>
                            <th>
                                Added By
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody id="listusers">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblStock.ProductName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PurchaseQuantity)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.purchaseUnitPrice)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.tblUser.FullName)
                                </td>
                                <td>
                                    @*@Html.ActionLink("Update", "Edit", new { id = item.CategoryID }, new { @class = "btn  btn-inverse btn-primary fa fa-edit" })
                            @Html.ActionLink("View", "Details", new { id = item.CategoryID }, new { @class = "btn  btn-primary fa fa-exclamation" })*@
                                    @Html.ActionLink("Delete", "DeleteConfirm", new { id = item.PurchaseCartDetailID }, new { @class = "btn  btn-primary fa " })
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                        </tr>
                    </tfoot>


                </table>
                <div style="float:right">
                    @Html.ActionLink("Confirm Purchase", "PurchaseConfirm", null, new { @class = "btn  btn-primary fa " })
                    @Html.ActionLink("Cancel", "CancelPurchase", null, new { @class = "btn btn-danger  btn-primary fa" })
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#searchuser").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#listusers tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });

        $('#PID').html('');
        $.ajax({
            url: '@Url.Action("GetProduct", "PurchaseCart")',
            type: 'GET',
            data: { sid: $(this).val() },
            dataType: 'Json',
            success: function (response) {
                for (var i = 0; i < response.data.length; i++) {
                    $('#PID').append("<option value=" + response.data[i].ProductID + ">" + response.data[i].Name + "</option>");
                }
            },

            error: function () {
            }


        });
    });



</script>






