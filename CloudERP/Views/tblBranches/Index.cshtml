@model IEnumerable<DatabaseAccess.tblBranch>

@{
    ViewBag.Title = "All Branches";
}

<script src="~/Scripts/jquery-3.7.0.js"></script>

<div class="card">
    <div class="card card-default">
        <div class="card-header">
            @Html.ActionLink("Add Branch", "Create", null, new { @style = "float:left", @class = "btn btn-primary" })
            <input type="text" id="searchbranch" name="searchbranch" class="form-control col-md-3" style="float:right;" placeholder="search here" />

        </div>
        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="text-info">Branch Name</th>
                            <th class="text-info">Contact</th>
                            <th class="text-info">Address</th>
                            <th class="text-info">Level</th>
                        </tr>
                    </thead>

                    <tbody id="listbranches">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BranchName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BranchContact)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BranchAddress)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblBranchType.BranchType)
                                </td>
                                <td>
                                    @Html.ActionLink("Update", "Edit", new { id = item.BranchID }, new { @class = "btn  btn-inverse btn-primary fa fa-edit" })
                                    @Html.ActionLink("View", "Details", new { id = item.BranchID }, new { @class = "btn  btn-primary fa fa-exclamation" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.BranchID }, new { @class = "btn  btn-primary fa fa-exclamation" })
                                </td>
                            </tr>

                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#searchbranch").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#listbranches tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });

</script>



