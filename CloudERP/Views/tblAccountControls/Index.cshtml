@model IEnumerable<CloudERP.Models.AccountControlMV>
@using DatabaseAccess
@{
    ViewBag.Title = "Account Controls List";
}


<script src="~/Scripts/jquery-3.7.0.js"></script>

<div class="card">
    <div class="card card-default">
        <div class="card-header">
            @Html.ActionLink("Add Account Control", "Create", null, new { @style = "float:left", @class = "btn btn-primary" })
            <input type="text" id="searchbranch" name="searchbranch" class="form-control col-md-3" style="float:right;" placeholder="search here" />

        </div>
        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                Account Head
                            </th>
                            <th>
                                Account Control Name
                            </th>

                            <th>
                                Added By
                            </th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody id="listbranches">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                   @Html.DisplayFor(modelItem => item.AccountHeadName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AccountControlName)
                                </td>
                             
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>

                                    @Html.ActionLink("Update", "Edit", new { id = item.AccountControlID }, new { @class = "btn  btn-inverse btn-primary fa fa-edit" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.AccountControlID }, new { @class = "btn  btn-primary fa fa-exclamation" })
                                </td>
                            </tr>

                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#searchbranch").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#listbranches tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });

</script>

