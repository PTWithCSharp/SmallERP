@model DatabaseAccess.tblCompany

@{
    ViewBag.Title = "Company Details";
}



<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Company Title
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Logo
        </dt>

        <dd>
            @if (!string.IsNullOrEmpty(Model.Logo))
            {
                <img src="@Url.Content(Model.Logo)" alt="Image" style="width:50px;height:50px;max-width:100%;height:auto;" />
            }

        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.CompanyID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
