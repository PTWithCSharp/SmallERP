@model IEnumerable < DatabaseAccess.Models.CustomerPaymentModel>

@{
    ViewBag.Title = "All Sale History";
}

<script src="~/Scripts/jquery-3.7.0.js"></script>

<div class="card">
    <div class="card card-flat">
        <div class="card-header">
            <h4>Select Payment Range</h4>
            <h5 class="text-danger">@ViewBag.Message</h5>
        </div>
        <div class="card-body">

            @using (Html.BeginForm("CustomSaleHistory", "SalePayment", FormMethod.Post, null))
            {
                @Html.AntiForgeryToken()
                <input type="text" value="@ViewBag.InvoiceID" id="id" name="id" style="display:none;" />

                <div class="row">
                    <div class="col-md-4">
                        <label>
                            Selecr From Date
                        </label>
                        <input type="date" id="FromDate" name="FromDate" value="@DateTime.Now" class="form-control" required />
                    </div>
                    <div class="col-md-4">
                        <label>
                            Selecr To Date
                        </label>
                        <input type="date" id="ToDate" name="ToDate" value="@DateTime.Now" class="form-control" required />
                    </div>

                </div>

                <br />
                <hr />
                <input type="submit" value="Retrieve Payment History" class="btn btn-success" style="float:right" />
            }

        </div>
    </div>
</div>



<div class="card">
    <div class="card card-default">
        <div class="card-header">
            <h3 class=" text-danger">@ViewBag.Message</h3>
            <input type="text" id="searchbranch" name="searchbranch" class="form-control col-md-3" style="float:right;" placeholder="search here" />

        </div>
        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>

                            <th>
                                Customer
                            </th>
                            <th>
                                Contact No
                            </th>
                            <th>
                                Invoice No
                            </th>
                            <th>
                                Date
                            </th>
                            <th>
                                Total Amount
                            </th>
                            <th>
                                Paid
                            </th>
                            <th>
                                Remaining Balance
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody id="listbranches">
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerContactNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InvoiceNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InvoiceDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotalAmount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PaymentAmount)
                                </td>
                                <td>
                                    @{
                                        if (item.RemainingBalance == 0 && item.PaymentAmount != 0)
                                        {
                                            <em class="icon-check"></em>
                                            <label class="text-success">Clear</label>
                                        }
                                        else
                                        {
                                            <label>@(item.TotalAmount - item.PaymentAmount)</label>
                                        }
                                    }
                                </td>
                                <td class="btn-group">
                                    @{


                                        if (item.RemainingBalance < item.TotalAmount)
                                        {
                                            @Html.ActionLink("Paid History", "PaidHistory", new { id = item.CustomerInvoiceID }, new { @class = "btn  btn-primary fa " })

                                        }

                                    }
                                    @Html.ActionLink("View Details", "SaleItemDetail", new { id = item.CustomerInvoiceID }, new { @class = "btn  btn-primary fa " })
                                </td>


                            </tr>

                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#searchbranch").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#listbranches tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });

</script>

