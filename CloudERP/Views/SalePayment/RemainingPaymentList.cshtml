@model IEnumerable<DatabaseAccess.Models.CustomerPaymentModel>

@{
    ViewBag.Title = "Purchase Payment Pending";
}

<script src="~/Scripts/jquery-3.7.0.js"></script>

<div class="card">
    <div class="card card-default">
        <div class="card-header">
            <h3 class=" text-danger">@ViewBag.Message</h3>
            <input type="text" id="searchbranch" name="searchbranch" class="form-control col-md-3" style="float:right;" placeholder="search here" />

        </div>
        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>

                            <th>
                                Customer
                            </th>
                            <th>
                                Contact No
                            </th>
                            <th>
                                Invoice No
                            </th>
                            <th>
                                Date
                            </th>
                            <th>
                                Total Amount
                            </th>
                            <th>
                                Paid
                            </th>
                            <th>
                                Remaining Balance
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody id="listbranches">
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerContactNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InvoiceNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InvoiceDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotalAmount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PaymentAmount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RemainingBalance)
                                </td>
                                <td class="btn-group">
                                    @{
                                        if (item.TotalAmount - 1 > item.PaymentAmount)
                                        {
                                            @Html.ActionLink("Pay Amount", "PaidAmount", new { id = item.CustomerInvoiceID }, new { @class = "btn  btn-primary fa " })
                                        }

                                        if (item.PaymentAmount > 0)
                                        {
                                            @Html.ActionLink("Paid History", "PaidHistory", new { id = item.CustomerInvoiceID }, new { @class = "btn  btn-primary fa " })

                                        }

                                    }
                                </td>


                            </tr>

                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#searchbranch").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#listbranches tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });

</script>

