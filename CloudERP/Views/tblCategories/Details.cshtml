@model DatabaseAccess.tblCategory

@{
    ViewBag.Title = "Category Details";
}



<div>
    <h4>View Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Category Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.categoryName)
        </dd>

        <dt>
            Branch
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblBranch.BranchName)
        </dd>

        <dt>
            Company
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblCompany.Name)
        </dd>

        <dt>
            Added By
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblUser.FullName)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.CategoryID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
