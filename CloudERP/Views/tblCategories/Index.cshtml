@model IEnumerable<DatabaseAccess.tblCategory>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<div class="card">
    <div class="card card-default">
        <div class="card-header">
            @Html.ActionLink("Add Category", "Create", null, new { @style = "float:left", @class = "btn btn-primary" })
            <input type="text" id="searchuser" name="searchuser" class="form-control col-md-3" style="float:right;" placeholder="search here" />

        </div>
        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                Category
                               
                            </th>
                            <th>
                                Added By
                            </th>

                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody id="listusers">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.categoryName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblUser.FullName)
                                </td>
                                <td>
                                    @Html.ActionLink("Update", "Edit", new { id = item.CategoryID }, new { @class = "btn  btn-inverse btn-primary fa fa-edit" })
                                    @Html.ActionLink("View", "Details", new { id = item.CategoryID }, new { @class = "btn  btn-primary fa fa-exclamation" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.CategoryID }, new { @class = "btn  btn-primary fa fa-exclamation" })
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#searchuser").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#listusers tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });

</script>





